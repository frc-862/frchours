%h2 Log in

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.error_notification

  .form-inputs
    = f.form_group :email do |f|
      = f.label :email, class: 'form-label col-md-2'
      .col-md-8
        = f.text_field :email, class: 'form-control', autofocus: true
        = f.error_messages
    = f.form_group :password do |f|
      = f.label :password, class: 'form-label col-md-2'
      .col-md-8
        = f.password_field :password, class: 'form-control'
        = f.error_messages

  .form-actions.col-md-offset-2.col-md-10
    = f.submit "Log in", class: 'btn btn-primary'

