= form_for(@attendance, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.form_group :student_id do |f|
      = f.label :student_id, class: 'form-label col-md-2'
      .col-md-8
        = f.text_field :student_id, class: 'form-control'
        = f.error_messages
    = f.form_group :signin do |f|
      = f.label :signin, class: 'form-label col-md-2'
      .col-md-8
        = f.datetime_select :signin, class: 'form-control'
        = f.error_messages
    = f.form_group :signout do |f|
      = f.label :signout, class: 'form-label col-md-2'
      .col-md-8
        = f.datetime_select :signout, class: 'form-control'
        = f.error_messages

  .form-actions.col-md-offset-2.col-md-10
    = f.submit class: 'btn btn-primary'
    = link_to "Cancel", attendances_path, class: 'btn'
