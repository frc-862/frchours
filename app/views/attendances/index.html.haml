- @title = "Listing attendances"

- content_for :description do
  %p Edit this template in app/views/attendances/index.html.haml.

- content_for :actions do
  = link_to new_attendance_path, class: 'btn btn-primary btn-large pull-right' do
    = icon_tag "plus"
    Add Attendance

.sheet.sheet-condensed
  .sheet-inner
    %table.table
      %thead
        %tr
          %th Student
          %th Signin
          %th Signout
          %th
      %tbody
      - @attendances.each do |attendance|
        %tr
          %td= attendance.student_id
          %td= attendance.signin
          %td= attendance.signout
          %td.actions
            = link_to icon_tag("eye-open"), attendance, rel: 'tooltip', title: 'Show'
            = link_to icon_tag("pencil"), edit_attendance_path(attendance), rel: 'tooltip', title: 'Edit'
            = link_to icon_tag("trash"), attendance, rel: 'tooltip', title: 'Delete', data: { confirm: 'Are you sure?' }, method: :delete

