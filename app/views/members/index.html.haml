- @title = "Listing members"

- content_for :description do
  %p Edit this template in app/views/members/index.html.haml.

- content_for :actions do
  = link_to new_member_path, class: 'btn btn-primary btn-large pull-right' do
    = icon_tag "plus"
    Add Member

.sheet.sheet-condensed
  .sheet-inner
    %table.table
      %thead
        %tr
          %th Last name
          %th First name
          %th Grade
          %th Email
          %th
      %tbody
      - @members.each do |member|
        %tr
          %td= member.last_name
          %td= member.first_name
          %td= member.grade
          %td= member.email
          %td.actions
            = link_to icon_tag("eye-open"), member, rel: 'tooltip', title: 'Show'
            = link_to icon_tag("pencil"), edit_member_path(member), rel: 'tooltip', title: 'Edit'
            = link_to icon_tag("trash"), member, rel: 'tooltip', title: 'Delete', data: { confirm: 'Are you sure?' }, method: :delete

