- @title = "Hours Report"
%p 
  Report Date
  = date_field_tag(:report_date, @date.to_date)
  = link_to "xml", reports_daily_path(format: :xml, :date => @date.to_date)
  &middot;
  = link_to "json", reports_daily_path(format: :json, :date => @date.to_date)
  &middot;
  = link_to "csv", reports_daily_path(format: :csv, :date => @date.to_date)
.sheet.sheet-condensed
  .sheet-inner
    %table.table
      %thead
        %tr
          %th Last name
          %th First name
      %tbody
      - @members.each do |member|
        %tr
          %td= member.last_name
          %td= member.first_name

