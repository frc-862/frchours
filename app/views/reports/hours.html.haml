- @title = "Hours Report"
= link_to "xml", reports_hours_path(format: :xml)
&middot;
= link_to "json", reports_hours_path(format: :json)
&middot;
= link_to "csv", reports_hours_path(format: :csv)
.sheet.sheet-condensed
  .sheet-inner
    %table.table
      %thead
        %tr
          %th Last name
          %th First name
          %th Hours
      %tbody
      - @members.each do |member|
        %tr
          %td= member.last_name
          %td= member.first_name
          %td= distance_of_time_in_words(member.work_time)

