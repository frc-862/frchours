- @title = "Showing calendar"

.form-horizontal
  .form-group
    %label.col-sm-2.form-label Day
    .uneditable-input.col-md-8.form-control
      %span= @calendar.day

  .form-group
    %label.col-sm-2.form-label Hours
    .uneditable-input.col-md-8.form-control
      %span= @calendar.hours

  .form-actions.col-md-offset-2
    = link_to icon_tag("pencil") + ' Edit', edit_calendar_path(@calendar), class: 'btn btn-primary'
    = link_to 'Back', calendars_path, class: 'btn'
